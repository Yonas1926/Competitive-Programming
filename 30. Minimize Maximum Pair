class Solution:
    def minPairSum(self, nums: List[int]) -> int:
        nums.sort()
        p1 = 0
        p2 = len(nums) - 1
        pairs = []
        
        while p1 < p2:
            pairs.append(nums[p1]+nums[p2])
            p1 += 1
            p2 -= 1
            
        return max(pairs)
